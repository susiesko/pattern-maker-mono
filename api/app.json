{
  "name": "pattern-maker-api",
  "description": "Pattern Maker API - Rails backend for bead catalog and inventory management",
  "repository": "https://github.com/your-username/pattern-maker-mono",
  "keywords": ["rails", "api", "postgresql"],
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    }
  ],
  "env": {
    "RAILS_ENV": {
      "value": "production"
    },
    "RAILS_SERVE_STATIC_FILES": {
      "value": "false"
    },
    "RAILS_LOG_TO_STDOUT": {
      "value": "true"
    }
  }
}
