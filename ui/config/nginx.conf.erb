daemon off;
worker_processes <%= ENV['NGINX_WORKERS'] || 4 %>;

events {
  use epoll;
  accept_mutex on;
  worker_connections <%= ENV['NGINX_WORKER_CONNECTIONS'] || 1024 %>;
}

http {
  gzip on;
  gzip_comp_level 2;
  gzip_min_length 512;
  gzip_proxied any;
  gzip_vary on;
  gzip_types
    application/atom+xml
    application/javascript
    application/json
    application/rss+xml
    application/vnd.ms-fontobject
    application/x-font-ttf
    application/x-web-app-manifest+json
    application/xhtml+xml
    application/xml
    font/opentype
    image/svg+xml
    image/x-icon
    text/css
    text/plain
    text/x-component;

  server_tokens off;

  log_format l2met 'measure#nginx.service=$request_time request_id=$http_x_request_id';
  access_log /dev/stdout l2met;
  error_log /dev/stderr;

  include mime.types;
  default_type application/octet-stream;
  sendfile on;

  client_body_timeout <%= ENV['NGINX_CLIENT_BODY_TIMEOUT'] || 30 %>;
  client_header_timeout <%= ENV['NGINX_CLIENT_HEADER_TIMEOUT'] || 30 %>;
  client_max_body_size <%= ENV['NGINX_CLIENT_MAX_BODY_SIZE'] || '1M' %>;
  keepalive_timeout <%= ENV['NGINX_KEEPALIVE_TIMEOUT'] || 65 %>;
  large_client_header_buffers <%= ENV['NGINX_LARGE_CLIENT_HEADER_BUFFERS'] || '8 32k' %>;
  send_timeout <%= ENV['NGINX_SEND_TIMEOUT'] || 30 %>;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;
    keepalive_timeout 5;
    client_max_body_size <%= ENV['NGINX_CLIENT_MAX_BODY_SIZE'] || '1M' %>;
    root /app/dist;
    index index.html;

    location / {
      try_files $uri $uri/ /index.html;
    }

    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
      expires 1y;
      add_header Cache-Control "public, immutable";
    }
  }
}